/**
 * Wrapper for product sections to include title
 *
 * @var Template $block
 * @var Escaper $escaper
 */

use Magento\Framework\Escaper;
use Magento\Framework\View\Element\Template;

$childHtml = $block->getChildHtml();
$sectionId = $block->getSectionId();
$sectionIdAttribute = $sectionId ? ' id="' . $escaper->escapeHtmlAttr($sectionId) . '"' : '';
?>
<?php if (trim($childHtml) !== ""): ?>
    <div class="product-full-width-section mx-auto pt-6 items-center lg:relative right-[18px] lg:w-[64vw] opacity-[0.8]"<?= /* @noEscape */ $sectionIdAttribute ?>>
        <h2 class="product-section-title text-xl my-3 border-b border-[#c6c6c6] pb-[12px]"><?= $escaper->escapeHtml($block->getTitle()); ?></h2>
        <?= $block->getChildHtml(); ?>
    </div>
<?php endif; ?>